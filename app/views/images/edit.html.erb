<div class="page-header">
  <h1>Editing Image #<%= @image.id %></h1>
</div>

<%= form_tag(image_url(@image), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :url, @image.url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :idea_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :idea_id, @image.idea_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :artist_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :artist_id, @image.artist_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Image", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
